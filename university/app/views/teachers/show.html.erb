<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @teacher.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @teacher.last_name %>
</p>

<p>
  <strong>Nine hundred:</strong>
  <%= @teacher.nine_hundred %>
</p>

<p>
  <strong>Email:</strong>
  <%= @teacher.email %>
</p>

<p>
  <strong>Office:</strong>
  <% if @teacher.office != nil %>
  <%= @teacher.office.building_name %>
  <% else %>
  <%= "None" %>
  <% end %>
</p>

